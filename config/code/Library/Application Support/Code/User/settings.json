{
    "yaml.schemas": {
        // "~/.vscode/extensions/continue.continue-1.0.19-darwin-arm64/config-yaml-schema.json": [
        //     ".continue/**/*.yaml"
        // ]
},
    // BEGIN -- settings to hide top menu bar
    // (requires Apc Customize UI++ extension)
    "window.titleBarStyle": "native",
    "apc.electron": {
        "titleBarStyle": "customButtonsOnHover",
    "opacity": 0.7,
        "transparent": true,
        // "backgroundColor": "#00000000",
        "backgroundColor": "#2a0a64",
        "vibrancy": "ultra-dark"
    },
    "apc.menubar.compact": true,
    // END -- settings to hide top menu bar and other stylesheet polish
    "atlascode.bitbucket.enabled": true,
    "atlascode.jira.enabled": false,
    "atlascode.helpExplorerEnabled": false,
    "workbench.colorTheme": "Catppuccin Mocha",
    "editor.minimap.enabled": false,
    "explorer.confirmDragAndDrop": false,
    "grammarly.domain": "creative",
    "languageTool.language": "es",
    "terminal.integrated.shell.osx": "/bin/zsh",
    "markdown-fiction-writer.export.outputFormat.default": "docx",
    "markdown-fiction-writer.export.smartDeshes": false,
    "explorer.confirmDelete": false,
    "markdown-fiction-writer.metadata.categories.icons": {
        "logline": "output",
        "subtitle": "symbol-type-parameter"
    },
    "markdown-fiction-writer.edit.easyParagraphCreation": "Shift+Enter",
    "editor.fontFamily": "Menlo, Helvetica Neue, Monaco, 'Courier New', monospace",
    "markdown-fiction-writer.metadata.categories.summaryEnabled": true,
    "redhat.telemetry.enabled": false,
    "terminal.external.osxExec": "alacritty.app",
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "terminal.integrated.fontFamily": "MesloLGS NF",
	"terminal.integrated.fontSize": 13,
	"terminal.integrated.fontWeight": "normal",
    "markdown-fiction-writer.editDialogue.marker": "\"Hello,\" (quotes)",
    "latex-workshop.view.pdf.viewer": "tab",
    "git.enableSmartCommit": true,
    "workbench.editorAssociations": {
    "*.copilotmd": "vscode.markdown.preview.editor",
    "*.pdf": "pdf.preview"
    },
    "workbench.startupEditor": "none",
    "editor.wordWrap": "on",
    "editor.insertSpaces": false,
    "terminal.explorerKind": "external",
    "notebook.lineNumbers": "on",
    "editor.fontSize": 13,
    "readTime.enabled": true,
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "editor.lineNumbers": "off",
    "[python]": {
        "editor.formatOnType": true
    },
    "editor.inlineSuggest.enabled": true,
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false,
        "yaml": false
    },
    "background.editorBackgrounds": [],
    "background.windowBackgrounds": [
        "https://unblast.com/wp-content/uploads/2021/01/Space-Background-Image-6.jpg",
        "https://unblast.com/wp-content/uploads/2021/01/Space-Background-Image-11-scaled.jpg",
        "https://negativespace.co/wp-content/uploads/2020/02/negative-space-abstract-wallpaper-design-pink-2048x1365.jpg",
        "https://cdn.pixabay.com/photo/2016/06/02/02/33/triangles-1430105_1280.png"
    ],
    "yaml.customTags": [
        "!And",
        "!And sequence",
        "!If",
        "!If sequence",
        "!Not",
        "!Not sequence",
        "!Equals",
        "!Equals sequence",
        "!Or",
        "!Or sequence",
        "!FindInMap",
        "!FindInMap sequence",
        "!Base64",
        "!Join",
        "!Join sequence",
        "!Cidr",
        "!Ref",
        "!Sub",
        "!Sub sequence",
        "!GetAtt",
        "!GetAZs",
        "!ImportValue",
        "!ImportValue sequence",
        "!Select",
        "!Select sequence",
        "!Split",
        "!Split sequence"
    ],
    "vscode_custom_css.imports": [
        "file:///~/.vscode/extensions/brandonkirbyson.vscode-animations-2.0.1/dist/updateHandler.js"
    ],
    "security.workspace.trust.untrustedFiles": "open",
    "prettier.proseWrap": "never",
    "explorer.confirmPasteNative": false,
    "sqltools.useNodeRuntime": true,
  "github.copilot.advanced": {},
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "git.autofetch": true,
    "githubIssues.queries": [
        {
            "label": "My Issues",
            "query": "is:open assignee:${user} repo:${owner}/${repository}",
      "groupBy": ["milestone"]
        },
        {
            "label": "Created Issues",
            "query": "author:${user} state:open repo:${owner}/${repository} sort:created-desc"
        },
        {
            "label": "Recent Issues",
            "query": "state:open repo:${owner}/${repository} sort:updated-desc"
        }
    ],
    "git.confirmSync": false,
    "window.commandCenter": false,
    "workbench.layoutControl.enabled": false,
    "workbench.settings.editor": "json",
    "githubPullRequests.createOnPublishBranch": "never",
    "files.associations": {
        "*.md": "markdown"
    },
    "workbench.iconTheme": "catppuccin-mocha",
    "update.mode": "manual",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "remote.SSH.remotePlatform": {
        "*.gitpod.io": "linux"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
  "gitlens.advanced.messages": {
    "suppressCommitNotFoundWarning": true
  },
  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    },
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "editor.renderWhitespace": "none",
  "git.openRepositoryInParentFolders": "never",
  "git.replaceTagsWhenPull": true,
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1"
}
